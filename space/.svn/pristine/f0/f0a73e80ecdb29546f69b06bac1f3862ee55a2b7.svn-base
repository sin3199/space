<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.bigdataB.space.mapper.loginMapper">
	
	<!-- 이메일 중복체크 -->
	<select id="emailCheck" parameterType="com.bigdataB.space.dto.MemberDTO" resultType="int">
		SELECT COUNT(0) FROM MEMBER WHERE member_email = #{member_email}
	</select>
	<insert id="insertMember" parameterType="com.bigdataB.space.dto.MemberDTO" >
		INSERT INTO MEMBER values(SEQ_MEMBER.NEXTVAL,#{member_email},#{member_pw},#{member_nm},#{member_pno},sysdate,#{member_grade})
	</insert>
	<select id="getMember" parameterType="com.bigdataB.space.dto.MemberDTO" resultType="MemberDTO">
		SELECT * FROM MEMBER WHERE member_email = #{member_email}
	</select>
</mapper>