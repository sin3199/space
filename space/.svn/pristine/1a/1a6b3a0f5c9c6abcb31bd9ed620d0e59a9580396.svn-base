	@RequestMapping(value = "/host_buildingList.do")
	public String listHostBuilding(HttpServletRequest req, @RequestParam String member_no, @RequestParam(required = false) String pageNum) {
		
		if(member_no == null) {
			member_no = "0";
		}
		int temp = Integer.parseInt(member_no);
		if (pageNum == null) {
			pageNum = "1";
		}
		int currentPage = Integer.parseInt(pageNum);
		int pageSize = 5; // page number?
		int startRow = (currentPage - 1) * pageSize + 1;
		int endRow = startRow + pageSize - 1;
		int countRow = hostBuildingMapper.getHostBuildingCount(temp);

		if (endRow > countRow) {
			endRow = countRow;
		}
		
		List<SpaceDTO> srlist = hostBuildingMapper.listHostBuilding(startRow, endRow,temp);
		int space_no = countRow - (startRow - 1);
		req.setAttribute("listHostBuilding", srlist);
		req.setAttribute("space_no", space_no);
		int pageCount = countRow / pageSize + (countRow % pageSize == 0 ? 0 : 1);
		int pageBlock = 3;
		int startPage = (currentPage - 1) / pageBlock * pageBlock + 1;
		int endPage = startPage + pageBlock - 1;

		if (endPage > pageCount) {
			endPage = pageCount;
		}

		req.setAttribute("pageCount", pageCount);
		req.setAttribute("pageBlock", pageBlock);
		req.setAttribute("startPage", startPage);
		req.setAttribute("endPage", endPage);

		return "host/host_buildingList";
	}

